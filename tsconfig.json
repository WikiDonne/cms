{
  "exclude": [
    "**/__tests__/"
  ],
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": [
      "dom",
      "es5",
      "es6",
      "es2015.promise",
      "es2016.array.include",
      "es2017.object"
    ],
    "declaration": true,
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  }
}
